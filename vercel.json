{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 3,

  "functions": {
    "api/index.py": {
      "runtime": "python3.9",
      "includeFiles": [
        "ocr-bin/tesseract",
        "tessdata/**"
      ]
    }
  },

  "routes": [
    {
      "src": "/extract",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/test",
      "methods": ["GET"],
      "dest": "api/index.py"
    },
    {
      "src": "/test-ocr",
      "methods": ["GET"],
      "dest": "api/index.py"
    }
  ]
}
